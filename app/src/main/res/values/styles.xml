<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonPrimary</item>
        <item name="android:editTextBackground">@drawable/text_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name ="AppTheme.ButtonPrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:radius">10dp</item>
        <item name="android:topRightRadius">10dp</item>
        <item name="android:topLeftRadius">10dp</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:bottomRightRadius">10dp</item>
    </style>

    <style name="AppTheme.ButtonDelete" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/delete_button</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="AppTheme.ButtonPopUp" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/popup_button</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>

</resources>
